<h2>Watch a movie? This is the delicious selection of movies.</h2>

<ul>
  {{#each movies}}
    <li>
      <h3>
        <a href="/movies/{{_id}}">{{title}}
        </a>
      </h3>
      <form action="/movies/{{_id}}/delete" method="get">
        <button type="submit">delete</button>
      </form>
      <form action="/movies/{{_id}}/edit" method="get">
        <button type="submit">edit</button>
      </form>
  {{/each}}
</ul>